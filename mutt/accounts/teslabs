############################
# teslabs specific options #
############################

color status     brightwhite   green
color indicator  brightwhite   green

set from      = "gerard@teslabs.com"
set sendmail  = "/usr/bin/msmtp -a teslabs"
set mbox      = "+teslabs/archive"
set record    = "+teslabs/sent"
set postponed = "+teslabs/drafts"

macro index S \
    "<save-message>+teslabs/spam<enter>" \
    "mark message as spam"

